@model IEnumerable<Product>

<div class="row pb-3">
    @{
        foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-3 col-md-3">
                <div class="row p-2">
                    <div class="col-12 p-1 product-card">
                        <a href="@Url.Action("Details", "Home", new {productId = product.Id})">
                        <div class="card" id="productCard">
                            <img src="@product.ImageUrl" class="card-img-top" />
                            <div class="pl-1">
                                <p class="card-title h5 text-primary text-center">
                                    @product.Name
                                </p>
                                <p class="card-title text-secondary text-center">
                                    By: @product.Author
                                </p>
                                <p class="text-center">
                                    List Price: <strike><b>£@product.ListPrice.ToString("0.00")</b></strike>
                                </p>
                                <p class="text-center">
                                    From: <b>£@product.Price100.ToString("0.00")</b>
                                </p>
                            </div>
                        </div>
                        </a>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts{
    <script>
    </script>
}