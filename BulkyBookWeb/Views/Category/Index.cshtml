@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-white">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Delete?
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var category in Model)
            {
                <tr>
                    <td width="50%">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">@category.Name</a>
                    </td>
                    <td width="30%">
                        @category.DisplayOrder
                    </td>
                    <td>
                    <form action="/Category/Delete/@category.Id" method="post">
                    @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" onclick="return confirm(&quot;Are you sure you want to delete this record? &quot;"><i class="bi bi-trash"></i>Delete?</button>
                    </form>
                        </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
